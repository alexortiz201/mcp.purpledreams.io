{
	"$schema": "http://json-schema.org/draft-07/schema#",
	"title": "Goal",
	"type": "object",
	"required": ["id", "title", "domain", "status"],
	"properties": {
		"id": {
			"type": "string"
		},
		"title": {
			"type": "string"
		},
		"domain": {
			"type": "string",
			"enum": ["Wealth", "Health", "Love", "Evolution"]
		},
		"status": {
			"type": "string",
			"enum": ["Active", "Paused", "Completed"]
		},
		"vision": {
			"type": "string"
		},
		"metrics": {
			"type": "array",
			"items": {
				"type": "string"
			}
		}
	}
}
