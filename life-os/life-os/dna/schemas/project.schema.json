{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Project",
  "type": "object",
  "required": [
    "id",
    "title",
    "goalId",
    "phase",
    "status"
  ],
  "properties": {
    "id": {
      "type": "string"
    },
    "title": {
      "type": "string"
    },
    "goalId": {
      "type": "string"
    },
    "phase": {
      "type": "string"
    },
    "status": {
      "type": "string",
      "enum": [
        "Active",
        "Paused",
        "Completed"
      ]
    },
    "victoryCondition": {
      "type": "string"
    },
    "tags": {
      "type": "array",
      "items": {
        "type": "string"
      }
    }
  }
}