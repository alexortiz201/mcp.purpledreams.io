{
	"name": "mcp.purpledreams.io",
	"private": true,
	"version": "0.0.0",
	"type": "module",
	"scripts": {
		"dev": "concurrently -n widgets,worker -c cyan,magenta \"npm run dev:widgets -- --watch\" \"npm run dev:worker\"",
		"dev:widgets": "vite build --watch --config vite.config.widgets.ts",
		"dev:worker": "wrangler dev --local",
		"deploy": "npm run build && wrangler deploy",
		"build:lifeos": "npm --prefix life-os/life-os-rebuilt run build",
		"prebuild": "npm run build:lifeos",
		"build": "concurrently -n widgets,worker -c cyan,magenta \"npm run build:widgets\" \"npm run build:worker\"",
		"build:widgets": "vite build --config vite.config.widgets.ts",
		"prebuild:worker": "node -e \"require('fs').writeFileSync('worker/build-timestamp.ts', 'export const BUILD_TIMESTAMP = \\'\" + Date.now() + '\\'\")\"",
		"build:worker": "wrangler build",
		"lint-format": "biome check",
		"lint-format-fix": "biome check --write",
		"preview": "vite preview",
		"generate-types": "wrangler types ./types/worker-configuration.d.ts",
		"pretypecheck": "npm run generate-types",
		"pretest": "vite build -c vite.config.tests.bundle.ts",
		"test": "DEBUG=vitest-pool-workers,wrangler:* VITEST_TS_NODE_PROJECT=tsconfig.test.json vitest run -c vite.config.tests.ts",
		"typecheck": "tsc --noEmit",
		"inspect": "inspector",
		"validate": "concurrently --kill-others-on-fail -n lint-format-fix,build,typecheck -c green,yellow,blue,magenta \"npm run lint-format-fix\" \"npm run build\" \"npm run typecheck\""
	},
	"dependencies": {
		"@epic-web/invariant": "^1.0.0",
		"@life-os/life-os": "file:./life-os/life-os-rebuilt",
		"@mcp-ui/server": "5.12.0",
		"@modelcontextprotocol/sdk": "^1.20.0",
		"@remix-run/dom": "^0.0.0-experimental-remix-jam.6",
		"@remix-run/events": "^0.0.0-experimental-remix-jam.5",
		"@remix-run/fetch-router": "^0.6.0",
		"@remix-run/headers": "^0.14.0",
		"agents": "^0.2.13",
		"zod": "^3.23.8",
		"zod-to-json-schema": "^3.24.1"
	},
	"devDependencies": {
		"@biomejs/biome": "2.2.6",
		"@cloudflare/vite-plugin": "^1.13.12",
		"@cloudflare/vitest-pool-workers": "^0.10.3",
		"@cloudflare/workers-types": "^4.20251014.0",
		"@epic-web/config": "^1.21.3",
		"@mcpjam/inspector": "^1.0.4",
		"@modelcontextprotocol/inspector": "^0.17.0",
		"@types/node": "^24.7.2",
		"@vitejs/plugin-react": "^5.0.4",
		"@vitest/runner": "^3.2.4",
		"@vitest/utils": "^3.2.4",
		"cloudflare-test-utils": "^1.0.2",
		"concurrently": "^9.2.1",
		"execa": "^9.6.0",
		"globals": "^16.4.0",
		"miniflare": "^4.20251011.1",
		"typescript": "^5.9.3",
		"vite": "npm:rolldown-vite@^7.1.17",
		"vite-node": "^3.2.4",
		"vitest": "^3.2.4",
		"wrangler": "^4.45.3"
	},
	"overrides": {
		"vitest": "^3.2.4",
		"@vitest/utils": "^3.2.4",
		"@vitest/runner": "^3.2.4",
		"vite-node": "^3.2.4"
	}
}
